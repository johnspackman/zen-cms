{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Puppeteer Hold",
      "program": "${workspaceFolder}/zx",
      "args": [ "puppeteer", "hold", "--config=./puppeteer-server/launch-debug.json" ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Fix Headers",
      "program": "${workspaceFolder}/bin/fix-headers.js",
      "args": [
        "source/class/zx/cms/server/Standalone.js"
      ],
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/zx",
        "**/polyfill.js"
      ],
      "type": "node"
    },
    {
      "name": "ZX: Run Node Tests",
      "program": "${workspaceFolder}/projects/tests/compiled/source-node/nodeUnitTests/index.js",
      "type": "node",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**",
        "**/polyfill.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Node Work Demo",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/compiled/source-node/demo-work-node-workers/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Docker Local Work Demo",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/compiled/source-node/demo-work-docker-peers/index.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Remote Docker Scheduler App",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/compiled/source-node/demo-work-remote-docker-scheduler/index.js"
    },
    {
      "address": "localhost",
      "name": "Attach to Remote API test server",
      "port": 9105,
      "restart": true,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
  ]
}